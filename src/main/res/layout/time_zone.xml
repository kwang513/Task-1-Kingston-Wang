        app:srcCompat="@drawable/img5" />

    <TextClock
        android:id="@+id/tc5"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:textColor="#31ba4f"
        android:gravity="center"
        android:textSize="25sp" />

</LinearLayout>